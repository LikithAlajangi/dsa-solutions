1. Star pattern@1
*    
**   
***  
****
#include <bits/stdc++.h>
using namespace std;

int main() {                                                      
	int n;                                                   
	cin >>n;
	for(int i=1;i<=n;i++){
	    for(int j=1;j<=n;j++){
	       if(j<=i){
	           cout << "*";
	       }
	       else{
	           cout << " ";
	       }
	    }
	    cout << endl;
	}
	return 0;
}

2. Star pattern@2
    *
   **
  ***
	for(int i=1;i<=n;i++){
	    for(int j=1;j<=n;j++){
	       if(j>n-i){
	           cout << "*";
	       }
	       else{
	           cout << " ";
	       }
	    }
	    cout << endl;
	}

